<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.intergratedapplicationhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="string"/>

    <application
        android:name=".application_activities.BackendlessApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MetricResults"></activity>
        <activity android:name=".activities.ApplicationListDetails" />
        <activity android:name=".activities.ApplicationList" />
        <activity android:name=".activities.UniversityOfFreeState" />
        <activity android:name=".activities.CentralUniversityOfTechnology" />
        <activity android:name=".activities.ActualApplication" />
        <activity android:name=".activities.UpdateStudent" />
        <activity android:name=".activities.PasswordResetActivity" />
        <activity android:name=".activities.ContactUs" />
        <activity android:name=".activities.AboutUs" />
        <activity android:name=".activities.InstitutionApplication" />
        <activity android:name=".activities.NewsActivity" />
        <activity android:name=".activities.ApplicationStatus" />
        <activity android:name=".activities.StudentProfileDetails" />
        <activity android:name=".activities.InstitutionProfile" />
        <activity android:name=".activities.StudentProfile" />
        <activity android:name=".activities.StudentRegistration" />
        <activity android:name=".activities.RegistrationActivity" />
        <activity android:name=".activities.Register" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>